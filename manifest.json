{
  "manifest_version": 2,
  "name": "PDF Bookmarks",
  "version": "1.2",
  "description": "Manage bookmarks for PDF pages with text anchors.",
  "permissions": ["storage", "activeTab"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
